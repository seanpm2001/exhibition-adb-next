{
  "type": "Categorization",
  "elements": [
    {
      "type": "Category",
      "label": "Allgemeine Daten der Ausstellung",
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "label": "Titel der Ausstellung",
              "scope": "#/properties/title"
            },
            {
              "type": "Control",
              "label": "Untertitel",
              "scope": "#/properties/subtitle"
            },
            {
              "type": "Control",
              "label": "Originaltitel",
              "scope": "#/properties/originalTitle"
            }
          ]
        },
        {
          "type": "Control",
          "label": "Kurzbeschreibung",
          "scope": "#/properties/description",
          "options": {
            "multi": true
          }
        },
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "label": "Ausstellungsart",
              "scope": "#/properties/exhibitionType"
            },
            {
              "type": "Control",
              "label": "Kategorie",
              "scope": "#/properties/exhibitionCategory"
            }
          ]
        },
        {
          "type": "Control",
          "label": "Genre",
          "scope": "#/properties/exhibitionGenre"
        },
        {
          "type": "Control",
          "label": "Ausstellungsserie",
          "scope": "#/properties/exhibitionSeries"
        },
        {
          "type": "Control",
          "label": "Schlagwörter",
          "scope": "#/properties/tags"
        },
        {
          "type": "Control",
          "label": "Weblinks",
          "scope": "#/properties/exhibitionweblink"
        },
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/@id"
            },
            {
              "type": "Control",
              "scope": "#/properties/@type"
            }
          ]
        }
      ]
    },
    {
      "type": "Category",
      "label": "Verortung",
      "elements": [
        {
          "type": "Control",
          "label": "Ausstellungsstätten (Institutionen und Räume)",
          "scope": "#/properties/places",
          "options": {
            "detail": "GENERATED"
          }
        },
        {
          "type": "Control",
          "label": "Ausstellungsorte (Städte und Länder)",
          "scope": "#/properties/locations",
          "options": {
            "detail": "GENERATED"
          }
        }
      ]
    },
    {
      "type": "Category",
      "label": "Zeitlicher Rahmen",
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Group",
              "elements": [
                {
                  "type": "Control",
                  "label": "Beginn",
                  "scope": "#/properties/startDate"
                }
              ]
            },
            {
              "type": "Group",
              "elements": [
                {
                  "type": "Control",
                  "label": "Ende",
                  "scope": "#/properties/endDate"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Category",
      "label": "Beteiligte Personen und Institutionen",
      "elements": [
        {
          "type": "Control",
          "label": "Herkunftsorganisation",
          "scope": "#/properties/sourceCorporation"
        },
        {
          "type": "Control",
          "label": "Künstler",
          "scope": "#/properties/involvedPersons",
          "options": {
            "elementLabelTemplate": "{{=it.person?.name || ''}} ({{=it.role?.title || ''}})",
            "detail": "GENERATED",
            "isReifiedStatement": true
          }
        },
        {
          "type": "Control",
          "label": "Institutionen",
          "scope": "#/properties/involvedCorporations",
          "options": {
            "elementLabelTemplate": "{{=it.corporation?.name || ''}} ({{=it.role?.title || ''}})",
            "detail": "GENERATED",
            "isReifiedStatement": true
          }
        }
      ]
    },
    {
      "type": "Category",
      "label": "Exponate und Ressourcen der Ausstellung",
      "elements": [
        {
          "type": "Control",
          "label": "Ausgestellte Werke",
          "scope": "#/properties/exponats",
          "options": {
            "elementLabelProp": "title",
            "detail": "GENERATED"
          }
        },
        {
          "type": "Control",
          "label": "Ressourcen",
          "scope": "#/properties/resources",
          "options": {
            "elementLabelProp": "title",
            "detail": "GENERATED"
          }
        }
      ]
    },
    {
      "type": "Category",
      "label": "Daten zur Erfassung",
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "label": "Veröffentlicht",
              "scope": "#/properties/published"
            }
          ]
        },
        {
          "type": "Control",
          "label": "Erfassungshinweise",
          "scope": "#/properties/editorNote",
          "options": {
            "multi": true
          }
        }
      ]
    }
  ],
  "options": {
    "variant": "stepper",
    "showNavButtons": true
  }
}
